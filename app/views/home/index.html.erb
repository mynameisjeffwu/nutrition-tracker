<section id="home">
    <div class="card summary">
        <div class="card-header">
            <span>Protein <%= format_protein(@foods, @goal) %> (g)</span>
            <span>Carbohydrates <%= format_carbs(@foods, @goal) %> (g)</span>
            <span>Fats <%= format_fat(@foods, @goal) %> (g)</span>
        </div>        
        <div class="spacer"></div>
        <div class="card-body">
            <span>Calories <%= total_calories(@foods) %> cal</span>
            <span><%= calories_left(@foods, @goal) %> Calories Left </span>
        </div>
    </div>

    <div class="card add">
        <div class="card-header">
        </div>
        <div class="spacer"></div>
        <%= render 'foods/form'%>
    </div>

    <div class="spacer"></div>

    <div class="list">
        <% if no_food?(@foods) %>
            <p class="text-centered">No Food Logged</p>
            <%= image_tag 'hungry.gif', :id => 'hungry' %>
            <p class="text-centered">Go eat something!</p>
        <% else %>
            <table>
                <tr>
                    <th></th>
                    <th style="width: 90px">Cal</th>
                    <th style="width: 90px">Protein</th>
                    <th style="width: 90px">Carb</th>
                    <th style="width: 90px">Fats</th>
                    <th></th>
                </tr>   
                <tr class="spacer"></tr>
            <% @foods.each do |food| %>
                <tr class="food-chip">
                    <td><%= titleize(food.name) %></td>
                    <td><%= food.cal %> cal</td>
                    <td><%= food.protein %> g</td>
                    <td><%= food.carbohydrates %> g</td>
                    <td><%= food.fat %> g</td>
                    <td class="delete"><%= button_to "âœ•", food_path(id: food.id), method: :delete, class: 'btn-circle' %></td>
                </tr>
                <tr class="spacer"></tr>
            <% end %>
            </table>
        <% end %>
    </div>
</section>
